<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedroschulze.trackspotdraft.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Track Your Spot"
        app:layout_constraintBottom_toTopOf="@id/btn_new_spot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_new_spot"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add New Spot"
        app:layout_constraintBottom_toTopOf="@id/btn_old_spot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/btn_old_spot"
        android:text="Update Spot"
        android:layout_width="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_new_spot"
        app:layout_constraintBottom_toTopOf="@id/btn_view_spot"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_view_spot"
        android:text="View Spots"
        android:layout_width="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_old_spot"
        app:layout_constraintBottom_toTopOf="@id/btn_settings"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_settings"
        android:text="Settings"
        android:layout_width="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_spot"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
