<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedroschulze.trackspotdraft.BodyScreen">

    <include layout="@layout/actionbar"
        android:id="@+id/my_toolbar"/>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/body_bg_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_torso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Torso"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.244" />

        <Button
            android:id="@+id/btn_left_arm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:text="Left Arm"
            app:layout_constraintEnd_toStartOf="@+id/btn_torso"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_torso" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
