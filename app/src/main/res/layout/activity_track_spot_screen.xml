<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedroschulze.trackspotdraft.TrackSpotScreen">

    <com.gtomato.android.ui.widget.CarouselView
        android:id="@+id/carousel1"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_centerInParent="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carousel2" />

    <com.gtomato.android.ui.widget.CarouselView
        android:id="@+id/carousel2"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_marginTop="20sp"
        android:layout_centerInParent="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/carousel1"/>

</android.support.constraint.ConstraintLayout>
